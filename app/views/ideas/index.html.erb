<div class="card-columns">
<% @ideas.each do |idea| %>
    <div class="card" style="width: 20rem;">
      <%= image_tag(idea.picture_url, class: "card-img-top") if idea.picture.present? %>
      <div class="card-body">
        <h4 class="card-title"><%= naughty_filter(idea.name) %></h4>
        <p class="card-text"><%= naughty_filter(idea.description) %></p>
        <a><%= link_to 'Show', idea, class: "btn btn-primary" %></a>
        <a><%= link_to 'Edit', edit_idea_path(idea), class: "btn btn-outline-success" %></a>
        <a><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-dark" %></a>
      </div>
</div>
<% end %>
</div>

<br>

