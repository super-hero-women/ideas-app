<p>
  <strong>Name:</strong>
  <%= naughty_filter(@idea.name) %>
</p>

<p>

  <strong>Description:</strong>
  <%= naughty_filter(@idea.description) %>
</p>
Coolness  : <%= rating_for @idea, 'coolness', star: 5 %>
<p>
  <strong>Picture:</strong>
  <%= image_tag(@idea.picture_url, width: 350) if @idea.picture.present? %>
</p>

<h3>Comments </h3>

<% @idea.comments.each do |comment| %>
  <p>
    <%= comment.description %>
    <% #= link_to 'Destroy', [@idea, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_with(model: [@idea, @idea.comments.build]) do |form| %>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>



<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'List', ideas_path %>
